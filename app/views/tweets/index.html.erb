<div class="container">
  <h1>Tweets</h1>

  <%= link_to "New Tweet", new_tweet_path, class: "btn btn-primary mb-3", remote: true %>

  <div class="row d-flex">
    <% @tweets.each do |tweet| %>
      <div class="col-3 mt-4">
        <div class="card mb-3">
          <div class="card-body">
            <%= link_to tweet_path(tweet) do %>
              <p class="tweet-content"><%= tweet.content %></p>
            <% end %>
            <% if tweet.image.present? %>
              <%= image_tag tweet.image, height: "150" %>
            <% end %>
            <div class="mt-2">
              <%= link_to "Edit", edit_tweet_path(tweet), class: "btn btn-secondary btn-sm" %>
              <%= link_to "Delete", tweet, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} , class: "btn btn-danger btn-sm" %>
              </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>